            },
          },

          {
            tailwindcss: {
              icon: "vscode-icons:file-type-tailwind",
              url: "https://tailwindcss.com/",
            },
          },
          {
            astro: {
              icon: "vscode-icons:file-type-astro",
              url: "https://astro.build/",
            },
          },
          {
            vercel: {
              icon: "logos:vercel-icon",
              url: "https://vercel.com/",
            },
          },
          {
            netlify: {
              icon: "logos:netlify",
              url: "https://www.netlify.com/",
            },
          },
          {
            digitalocean: {
              icon: "gg:digitalocean",
              url: "https://www.digitalocean.com/",
            },
          },
          {
            storyblok: {
              icon: "simple-icons:storyblok",
              url: "https://www.storyblok.com/",
            },
          },
          {
            github: {
              icon: "logos:github-icon",
              url: "https://github.com",
            },
          },
        ]}
      />
      <h3 class="text-3xl mt-6 p-2 rowdies">Get to know me</h3>
      <div class="flex gap-6 sm:justify-start justify-between p-2 socials">
        <a
          href="https://www.github.com/dev-coda"
          aria-label="Github link"
          rel="noreferrer"
          target="_blank"
          ><svg
            stroke="currentColor"
